<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <!-- resultados.xml -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/fondoInicio">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:textAlignment="center">

            <TextView
                android:id="@+id/textView66"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="20dp"
                android:text="RESULTADOS"
                android:textAlignment="center"
                android:textColor="@android:color/black"
                android:textSize="48sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView71"
                    android:layout_width="220dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/rounded_corner_view"
                    android:text="Área 1"
                    android:textAlignment="center"
                    android:textColor="@android:color/black"
                    android:textSize="48sp" />

                <TextView
                    android:id="@+id/resultadoArea1"
                    android:layout_width="150dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:textAlignment="center"
                    android:textColor="@android:color/black"
                    android:textSize="48dp"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/infoArea1"
                    android:layout_width="90dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    app:srcCompat="@mipmap/ic_info_foreground" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView67"
                    android:layout_width="220dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/rounded_corner_view"
                    android:text="Área 2"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="48sp" />

                <TextView
                    android:id="@+id/resultadoArea2"
                    android:layout_width="150dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:textAlignment="center"
                    android:textColor="@android:color/black"
                    android:textSize="48sp"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/infoArea2"
                    android:layout_width="90dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"

                    app:srcCompat="@mipmap/ic_info_foreground" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView69"
                    android:layout_width="220dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/rounded_corner_view"
                    android:text="Área 3"
                    android:textAlignment="center"
                    android:textColor="@android:color/black"
                    android:textSize="48sp" />

                <TextView
                    android:id="@+id/resultadoArea3"
                    android:layout_width="150dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:textAlignment="center"
                    android:textColor="@android:color/black"
                    android:textSize="48sp"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/infoArea3"
                    android:layout_width="90dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"

                    app:srcCompat="@mipmap/ic_info_foreground" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/area4"
                    android:layout_width="220dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/rounded_corner_view"
                    android:text="Área 4"
                    android:textAlignment="center"
                    android:textColor="@android:color/black"
                    android:textSize="48sp" />

                <TextView
                    android:id="@+id/resultadoArea4"
                    android:layout_width="150dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:textAlignment="center"
                    android:textColor="@android:color/black"
                    android:textSize="48sp"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/infoArea4"
                    android:layout_width="90dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"

                    app:srcCompat="@mipmap/ic_info_foreground" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/area5"
                    android:layout_width="220dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/rounded_corner_view"
                    android:text="Área 5"
                    android:textAlignment="center"
                    android:textColor="@android:color/black"
                    android:textSize="48sp" />

                <TextView
                    android:id="@+id/resultadoArea5"
                    android:layout_width="150dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:textAlignment="center"
                    android:textColor="@android:color/black"
                    android:textSize="48sp"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/infoArea5"
                    android:layout_width="90dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"

                    app:srcCompat="@mipmap/ic_info_foreground" />
            </LinearLayout>

            <Button
                android:id="@+id/repetirTest"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:backgroundTint="@android:color/holo_blue_light"
                android:text="Repetir Test" />

            <Button
                android:id="@+id/volverInicio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@android:color/holo_blue_light"
                android:text="Volver al inicio" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_marginTop="30dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="151dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    app:srcCompat="@mipmap/ic_info_foreground" />

                <TextView
                    android:id="@+id/textView73"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="Pulsando sobre el símbolo de información junto a cada área, este te llevará a una página web externa explicando cada una."
                    android:textAlignment="center"
                    android:textColor="@android:color/black"
                    android:textSize="17sp" />

            </LinearLayout>

        </LinearLayout>
    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>